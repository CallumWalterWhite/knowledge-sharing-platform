@page
@model KnowledgeShare.Pages.CreatePostModel
@{
    ViewData["Title"] = "Create a new post";
}

<h1>Create a new post</h1>

<form method="post" asp-action="CreatePost">
    <div class="form-group">
        <label asp-for="@Model.Title">Title:</label>
        <input asp-for="@Model.Title" class="form-control" />
        <span asp-validation-for="@Model.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Body">Body:</label>
        <textarea asp-for="Body" class="form-control"></textarea>
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Tags:</label>
        @foreach (var tag in Model.Tags)
        {
            <div class="form-check">
                <input type="checkbox" asp-for="@tag.IsSelected" class="form-check-input" />
                <label class="form-check-label" asp-for="@tag.IsSelected">@tag.Name</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
