        </div>
        <NavMenu />
        <div class="py-3 py-md-4" style="padding: var(--rz-panel-menu-item-padding);">
            <RadzenText Text="Knowledge sharing platform v1.0.0" TextStyle="Radzen.Blazor.TextStyle.Caption" style="color: var(--rz-text-disabled-color);" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
            <RadzenText Text="Copyright Ⓒ 2023" TextStyle="Radzen.Blazor.TextStyle.Caption" class="mb-0" style="color: var(--rz-text-disabled-color);" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
        </div>
    </RadzenSidebar>
    <RadzenContextMenu />
    <RadzenDialog />
</RadzenLayout>
@code {
    bool sidebar4Expanded = false;
    Guid? selected_post;

    IEnumerable<SearchPostResultDto> posts;

    IEnumerable<SearchPostResultDto> contextPosts = new List<SearchPostResultDto>();

    async void OnLoadData(LoadDataArgs args)
    {
        Task t = Task.Run(async () =>
        {
            contextPosts = await SearchPostService.SearchAsync(args.Filter.ToLower());
            posts = contextPosts.DistinctBy(x => x.Id);
        });
        Task.WaitAll(t);
        await InvokeAsync(StateHasChanged);
    }
    
    protected override async Task OnParametersSetAsync()
    {
        await InvokeAsync(StateHasChanged);
    }

    async Task HandleSelection()
    {
        if (selected_post is not null)
        {
            SearchPostResultDto selectPost = contextPosts.First(x => x.Id == selected_post);
            switch (selectPost.Type)
            {
                case "ArticlePost":
                    NavigationManager.NavigateTo($"/articlepost/{selectPost.Id}");
                    break;
                case "BookPost":
                    NavigationManager.NavigateTo($"/bookpost/{selectPost.Id}");
                    break;
                case "FreeFormPost":
                    NavigationManager.NavigateTo($"/freeformpost/{selectPost.Id}");
                    break;
            }   
        }
    }
    
    private bool sidebarExpanded = true;

    void SidebarToggleClick()
    {
        sidebarExpanded = !sidebarExpanded;
    }
}