@using KnowledgeShare.Core.Authentication
@inject ICurrentAuthUser CurrentAuthUser
<RadzenPanelMenu>
    <RadzenPanelMenuItem Text="Home" Path="/" Icon="home" />
    <RadzenPanelMenuItem Text="Create post" Path="create-post"  Icon="note_add" />
    <RadzenPanelMenuItem Text="Profile" Path="/profile" Icon="account_box" />
    <RadzenPanelMenuItem Text="Graph Visualizer" Path="/graphvisual" Icon="dns" />
    @{
        if (CurrentAuthUser.GetPersonAsync().GetAwaiter().GetResult()!.IsAdmin)
        {
            <RadzenPanelMenuItem Text="Admin Manage Posts" Path="/admin-posts" Icon="manage_search" />
        }
    }
</RadzenPanelMenu>
